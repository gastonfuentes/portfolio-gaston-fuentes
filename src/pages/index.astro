---
import Layout from "../layouts/Layout.astro";

import Badge from "../components/Badge.astro";

import GitHubIcon from "../components/icons/GitHubIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import EmailIcon from "../components/icons/EmailIcon.astro";
import Experience from "../components/Experience.astro";
import AboutMe from "../components/AboutMe.astro";
import BriefIcon from "../components/icons/BriefIcon.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
import Contact from "../components/Contact.astro";
import SubTitle from "../components/SubTitle.astro";
import DiaryIcon from "../components/icons/DiaryIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
---

<Layout
	title="Portfolio de Gaston Fuentes - Desarrollador y Programador Web"
	description="Contrata a Gaston para crear y desarrollar tu app web o movil. Especializado en programacion Front-end."
>
	<main class="w-full md:w-2/4 max-w-3xl">
		<section class="py-14">
			<img
				class="rounded-full size-28 mb-1"
				src="/misho-emoji-2.png"
				alt="misho"
			/>
			<h1 class="text-white text-5xl font-bold pb-3">
				Hola, soy Gaston <!-- <a
					href="https://linkedin.com"
					target="_blank"
					rel="noopener"><Badge>Disponible para trabajar</Badge></a
				> -->
			</h1>
			<h2 class="text-xl opacity-80 mb-4">
				<span class="text-sky-300 font-bold"
					>Full Stack Developer y Diseñador Multimedia.</span
				> Poseo experiencia trabajando con tecnologías como Js, NodeJS, React,
				Redux, Redux Toolkit, Express, SQL, Sequelize, Tailwind, entre otras.
				Me gusta complementar toda mi experiencia adquirida como diseñador
				con la programación.
			</h2>
			<nav class="flex flex-col md:flex-row gap-1">
				<SocialPill href="https://github.com/gastonfuentes">
					<GitHubIcon />
					GitHub
				</SocialPill>

				<SocialPill
					href="https://www.linkedin.com/in/gastonnicolasfuentes/"
				>
					<LinkedInIcon />
					LinkedIn
				</SocialPill>

				<SocialPill href="mailto:gastonnicolasfuentes@gmail.com">
					<EmailIcon />
					gastonnicolasfuentes@gmail.com
				</SocialPill>
			</nav>
		</section>

		<section id="experiencia">
			<SubTitle>
				<BriefIcon />
				Experiencia Laboral
				<hr class="h-px w-1/4 md:w-1/3 bg-slate-50" />
			</SubTitle>
			<Experience />
		</section>

		<section id="proyectos" class="pt-8">
			<SubTitle>
				<CodeIcon />
				Proyectos
				<hr class="h-px w-1/4 md:w-1/3 bg-slate-50" />
			</SubTitle>
			<Projects />
		</section>

		<section id="sobre-mi" class="pt-8">
			<SubTitle>
				<DiaryIcon />
				Sobre mi
				<hr class="h-px w-1/4 md:w-1/3 bg-slate-50" />
			</SubTitle>
			<AboutMe />
		</section>

		<section id="contacto" class="pt-8">
			<SubTitle>
				<MailIcon />
				Contacto
				<hr class="h-px w-1/4 md:w-1/3 bg-slate-50" />
			</SubTitle>
			<Contact />
		</section>
	</main>
</Layout>
